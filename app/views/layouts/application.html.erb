<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="div-header">
          <h1>ToDo</h1>
          <%= link_to 'New List', new_list_path, class: 'btn btn-primary' %>
    </div>

    <%= yield %>

    <div id="myModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeModalBtn">&times;</span>
        <h2 class="modal-title">New Task</h2>
        <%= form_with(model: Task, url: '', remote: true, id:'editCreateTask') do |form| %>
          <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, id: 'modalTaskTitle'%>
          </div>
          <div class="field">
          <%= form.label :note %>
          <%= form.text_area :note, id: 'modalTaskNote' %>
          </div>
          <%= form.hidden_field :completed, value: 'false', id: 'modalTaskCompleted' %>
          <%= form.hidden_field :list_id, value: '', id: 'taskListId' %>

          <div class="actions">
          <%= form.submit '', class: 'btn modal-btn', id: 'modalBtn' %>
          </div>
        <% end %>
      </div>
    </div>

  </body>
</html>
